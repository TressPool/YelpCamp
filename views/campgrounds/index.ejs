  <% layout('layouts/boilerplate') %> 
  
  <!-- Cluster map of all the campgrounds -->
  <div id="cluster-map">
  </div>  

  <h1>All Campgrounds</h1>
  <!-- list the campgrounds -->
  <ul>
    <!-- Go through all the campgrounds -->
    <% for(camp of campgrounds) { %>
      <div class="card mb-3">
        <div class="row">

          <!-- campground thumbnail -->
          <div class="col-md-4">
            <% if(camp.images.length >= 1){ %>  
            <img src="<%= camp.images[0].thumbnail %> " alt="" class="img-fluid">
            <% } %>  
          </div>
          
          <!-- rest to fill -->
          <div class="col-mg-8">
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %> </h5>
              <p class="card-text"><%= camp.description %> </p>
              <p class="card-text">
                <small class="text-muted"><%= camp.location %> </small>
              </p>
              <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
            </div>
          </div>

        </div> <!-- End of row-->
      </div> <!-- End of card-->
    <% } %>
  </ul>

  <script>
    const mapToken = '<%= process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
  </script>

  <script src="/javascripts/clustermap.js"></script>